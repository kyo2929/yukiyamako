<div>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>errors prohibited this obj form being saved:
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="container float-left mt-4 ml-5">
  <div class="row">
      <h4 class="bg-light d-inline-block mb-4 text-center"><b><%= @customer.name %>さんの会員情報編集</b></h4>
       <table class="table table-borderless">
           <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
           <tr>
               <td>会員ID</td>
               <td><%= @customer.id %></td>
           </tr>
           <tr>
               <td><%= f.label "名前" %></td>
               <td><%= f.text_field :name, autoforcus: true, autocomplete: "name",  placeholder: "令和" %></td>
           </tr>
               <td><%= f.label "メールアドレス" %></td>
               <td><%= f.text_field :email, autoforcus: true, autocomplete: "email",  placeholder: "sample@exanple.com" %></td>
           </tr>
           <tr>
               <td><%= f.label "会員ステータス" %></td>

                   <td>
                       <span>
                           <%= f.radio_button :is_deleted, false, checked: @customer.is_deleted == false %>
                           <%= f.label :is_deleted, '有効' %>
                       </span>
                       <span class="pl-4">
                           <%= f.radio_button :is_deleted, true, checked: @customer.is_deleted == true %>
                           <%= f.label :is_deleted, '退会' %>
                       </span>
                   </td>
           </tr>
           <tr>
               <td></td>
               <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
           </tr>
           <% end %>
        </table>
  </div>
</div>