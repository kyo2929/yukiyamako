
<p class="offset-9">
  <%= link_to new_post_path do %>
    <i class="fa-solid fa-circle-plus fa-2xl"></i>
  <% end %>
</p>

<div class="container">
  <div class="row">

    <div class="col-2">
    </div>

    <!--ここからメイン-->
    <div class="col-9">
      <h4 class="bg-light">投稿一覧</h4>

       <%= link_to '新しい順', posts_path(latest: "true") %>
       |<%= link_to '古い順', posts_path(old: "true") %>
       |<%= link_to '評価の高い順', posts_path(star_count: "true") %>

      <table class ="table">
          <tr>
              <th>プロフィール画像</th>
              <th>名前</th>
              <th>投稿</th>
              <th>スキー場</th>
              <th>投稿画像数</th>
              <th>いいね</th>
              <th>コメント数</th>
              <th>評価</th>
          </tr>
          <% @posts.each do |posted| %>
          <tr>
              <td><%= image_tag posted.customer.get_profile_image(80, 80) %></td>
              <td>
                <%= link_to customer_path(posted.customer.id) do %>
                  <%= posted.customer.name %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(posted.id) do %>
                  <%= posted.body %>
                <% end %>
              </td>
              <td>
                <%= link_to ski_resort_path(posted.ski_resort_id) do %>
                  <%= posted.ski_resort.name %>
                <% end %>
              </td>
              <td><%= posted.images.count %>枚</td>
              <td id="favorite_buttons_<%= posted.id %>">
                <%= render "public/favorites/btn", posts: posted %>
              </td>
              <td><%= posted.post_comments.count %></td>
              <td><%= render "star", posts: posted %></td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>