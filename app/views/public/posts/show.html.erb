<div class="container">
  <h4 class="bg-light text-center mt-4" style="width:150px">商品詳細</h3>

  <div class="col-md-9 ml-3 mx-auto">
  　<div class="row">
    　  <!--写真-->
      <div class="mr-2">
        <% if @post.image.attached? %>
          <% @post.image.each do |image| %>
            <%= image_tag image.variant(resize: '500x500') %>
          <% end %>
        <% end %>
      </div>
      <!--商品情報-->
      <div>
      <table>
        <tr>
          <th style="width:150px">投稿者名</th>
          <th style="width:260px"><%= @post.customer.name %></th>
        </tr>
        <tr>
          <th>投稿内容</th>
          <th><%= @post.body %></th>
        </tr>
        <tr>
          <th>スキー場</th>
          <th>
            <%= link_to ski_resort_path(@post.ski_resort_id) do %>
              <%= @post.ski_resort.name %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>いいね</th>
          <th><%= render "favorites/btn", posts: @post %></th>
        </tr>
        <tr>
          <th>レビュー</th>
          <th><%= render "star", posts: @post %></th>
        </tr>
        <tr>
          <th></th>
          <th><%= link_to "削除", post_path(@post), class: 'btn btn-sm btn-danger', method: :delete %></th>
        </tr>
      </table>
      <div class="mt-3 offset-2">
        <%= link_to "編集する", edit_post_path(@post.id), class:"btn btn-success" %>
      </div>
      </div>
    </div>
  </div>
</div>